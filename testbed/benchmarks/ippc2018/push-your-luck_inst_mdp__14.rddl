instance push-your-luck_inst_mdp__14 {
    domain = push-your-luck_mdp;

    objects {
        die : { d1, d2, d3 };
    };

    non-fluents {
        // reward factor is 0.25 plus a quarter of the die value
        VALUE(@1) = 0.5;
        VALUE(@2) = 0.75;
        VALUE(@3) = 1.0;
        VALUE(@4) = 1.25;
        VALUE(@5) = 1.5;
        VALUE(@6) = 1.75;
        VALUE(@7) = 2.0;
        VALUE(@8) = 2.25;
        VALUE(@9) = 2.5;
        VALUE(@10) = 2.75;

        // unfair 10-sided die with random probabilities
        PROB(d1, @1) = 0.12;
        PROB(d1, @2) = 0.06;
        PROB(d1, @3) = 0.14;
        PROB(d1, @4) = 0.07;
        PROB(d1, @5) = 0.05;
        PROB(d1, @6) = 0.1;
        PROB(d1, @7) = 0.16;
        PROB(d1, @8) = 0.05;
        PROB(d1, @9) = 0.12;
        PROB(d1, @10) = 0.13;

        // unfair 10-sided die with random probabilities
        PROB(d2, @1) = 0.02;
        PROB(d2, @2) = 0.25;
        PROB(d2, @3) = 0.03;
        PROB(d2, @4) = 0.20;
        PROB(d2, @5) = 0.04;
        PROB(d2, @6) = 0.06;
        PROB(d2, @7) = 0.08;
        PROB(d2, @8) = 0.05;
        PROB(d2, @9) = 0.13;
        PROB(d2, @10) = 0.14;

        // unfair 10-sided die with random probabilities
        PROB(d3, @1) = 0.16;
        PROB(d3, @2) = 0.02;
        PROB(d3, @3) = 0.11;
        PROB(d3, @4) = 0.21;
        PROB(d3, @5) = 0.07;
        PROB(d3, @6) = 0.07;
        PROB(d3, @7) = 0.14;
        PROB(d3, @8) = 0.11;
        PROB(d3, @9) = 0.05;
        PROB(d3, @10) = 0.06;
    };

    init-state {
        ~die-value-seen(@1);
    };

    horizon = 80;

    discount = 1.0;
}
